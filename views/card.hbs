<body class="body_card">
    <!-- Import jQuery, FontAwesome Icons and Open Sans Font -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>



    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- List wrapper -->
    <div id="listWrapper">

        <!-- List title -->
        <div id="titleName">
            <input id="titleInput" type="text" placeholder="My List" maxlength="21">
        </div>

        <div id="separator"></div>

        <!-- To do items -->
        <div id="itemsWrapper">
            <div class="item">
                <!-- New items are created here -->
            </div>
        </div>

        <!-- Add a new item -->
        <form action="/card/cards" method="POST">
        <div id="addNewItemWrapper">

            <input id="title" name="title" type="text" required>
            {{!-- <input id="addNewItemInput" name="addNewItemInput" type="text" maxlength="30" required> --}}
            <button id="addNewItemBtn"></button>

        </div>
        </form>
    </div>

    <script src="/scripts/card.js"></script>
</body>